<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/Health"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#e69f00"
            app:srcCompat="@drawable/heart1" />
        <ImageButton
            android:id="@+id/Personal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="gotoGoalsMenuActivity"
            android:background="#009e73"
            app:srcCompat="@drawable/goals1" />
        <ImageButton
            android:id="@+id/Contacts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#e69f00"
            app:srcCompat="@drawable/contacts"
            android:onClick="gotoContactsActivity" />
        <ImageButton
            android:id="@+id/logOut"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#009e73"
            android:onClick="logoutVerificationMessage"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_barVisibility"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/barVisibilityButton"
            android:onClick="changeBarVisibility"
            android:text="&lt; &lt; &lt;"
            android:textColor="#ffffff"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <ImageButton
                android:id="@+id/ib_HAllergies"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009e73"
                app:srcCompat="@drawable/personalprofile" />

            <ImageButton
                android:id="@+id/ib_HMedicine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009e73"
                app:srcCompat="@drawable/personalprofile" />

            <ImageButton
                android:id="@+id/ib_HVitalSigns"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009e73"
                app:srcCompat="@drawable/personalprofile" />

            <ImageButton
                android:id="@+id/ib_HDiet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009e73"
                app:srcCompat="@drawable/personalprofile" />

            <ImageButton
                android:id="@+id/ib_HExcercisePlan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009e73"
                app:srcCompat="@drawable/personalprofile" />




        </LinearLayout>
        <EditText
            android:id="@+id/et_Hallergies"
            android:layout_width="318dp"
            android:layout_height="57dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Allergies"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            tools:layout_editor_absoluteX="35dp" />



    </LinearLayout>
</LinearLayout>


